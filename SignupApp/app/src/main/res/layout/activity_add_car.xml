            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Cost as Per/Day"
                android:textColorHint="@color/colorDarkPink"
                app:boxStrokeColor="@color/colorDarkPink"
                app:boxStrokeWidthFocused="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorDarkPink"
                app:helperText="*Required"
                app:hintTextColor="@color/colorDarkPink"
                app:startIconDrawable="@drawable/edit"
                app:startIconTint="@color/colorDarkPink">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Cost_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen"
                    android:inputType="number"
                    android:maxLength="100"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Car Fuel Type"
                android:textColorHint="@color/colorDarkPink"
                app:boxStrokeColor="@color/colorDarkPink"
                app:boxStrokeWidthFocused="2dp"
                app:endIconTint="@color/colorDarkPink"
                app:hintTextColor="@color/colorDarkPink"
                app:startIconTint="@color/colorDarkPink">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_fuel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen"
                    android:inputType="none"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Car is Available or Not"
                android:textColorHint="@color/colorDarkPink"
                app:boxStrokeColor="@color/colorDarkPink"
                app:boxStrokeWidthFocused="2dp"
                app:endIconTint="@color/colorDarkPink"
                app:hintTextColor="@color/colorDarkPink"
                app:startIconTint="@color/colorDarkPink">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen"
                    android:inputType="none"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:helperText="Press Image View to Select Car Image">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewCar"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:tooltipText="Select Driving Licence Image"
                    app:shapeAppearance="@style/CornerCut"
                    app:srcCompat="@drawable/ic_upload_24" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/add_new_car"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/colorDarkPink"
                android:elevation="5dp"
                android:fontFamily="@font/oxygen_bold"
                android:padding="20dp"
                android:text="Add Car"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>