<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Car"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:focusableInTouchMode="true">


        <TextView
            android:id="@+id/AddCarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:text="Add new Car "
            android:textAllCaps="true"
            android:textColor="@color/colorDarkPink"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Register Number "
                android:textColorHint="@color/colorDarkPink"
                app:boxStrokeColor="@color/colorDarkPink"
                app:boxStrokeWidthFocused="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorDarkPink"
                app:helperText="*Required"
                app:hintTextColor="@color/colorDarkPink"
                app:startIconDrawable="@drawable/edit"
                app:startIconTint="@color/colorDarkPink">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Register_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen"
                    android:inputType="text"
                    android:maxLength="100"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Model Name"
                android:textColorHint="@color/colorDarkPink"
                app:boxStrokeColor="@color/colorDarkPink"
                app:boxStrokeWidthFocused="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorDarkPink"
                app:helperText="*Required"
                app:hintTextColor="@color/colorDarkPink"
                app:startIconDrawable="@drawable/edit"
                app:startIconTint="@color/colorDarkPink">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Model_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen"
                    android:inputType="text"
                    android:maxLength="100"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Company Name"
                android:textColorHint="@color/colorDarkPink"
                app:boxStrokeColor="@color/colorDarkPink"
                app:boxStrokeWidthFocused="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorDarkPink"
                app:helperText="*Required"
                app:hintTextColor="@color/colorDarkPink"
                app:startIconDrawable="@drawable/edit"
                app:startIconTint="@color/colorDarkPink">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Brand_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen"
                    android:inputType="text"
                    android:maxLength="100"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="Transmission Type "
                android:textColorHint="@color/colorDarkPink"
                app:boxStrokeColor="@color/colorDarkPink"
                app:boxStrokeWidthFocused="2dp"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="clear_text"
                app:endIconTint="@color/colorDarkPink"
                app:helperText="*Required"
                app:hintTextColor="@color/colorDarkPink"
                app:startIconDrawable="@drawable/edit"
                app:startIconTint="@color/colorDarkPink">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tranmission_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oxygen"
                    android:inputType="text"
                    android:maxLength="100"
                    android:textSize="15dp" />

            </com.google.android.material.textfield.TextInputLayout>

