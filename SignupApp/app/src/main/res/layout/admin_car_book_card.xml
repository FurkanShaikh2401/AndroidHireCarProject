        <ImageView
            android:id="@+id/carImg_admin"
            android:layout_width="198dp"
            android:layout_height="86dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:foregroundGravity="right"
            android:src="@drawable/car1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout1_admin"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" />

        <LinearLayout
            android:id="@+id/header_layout_admin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2_admin"
            app:layout_constraintVertical_bias="0.14"
            tools:layout_editor_absoluteX="5dp">

            <TextView
                android:id="@+id/PickupLoc_admin"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:fontFamily="@font/oxygen"
                android:gravity="start"
                android:text="@string/pickuploc"
                android:textColor="@color/colorDarkPink"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/hr_line2_admin"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="start"
                android:contentDescription="image"
                android:src="@drawable/ic_baseline_horizontal_rule_24" />

            <TextView
                android:id="@+id/DropLoc_admin"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:fontFamily="@font/oxygen"
                android:gravity="end"
                android:text="@string/droploc"
                android:textColor="@color/colorDarkPink"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Navigate_btn_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/header_layout_admin"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/oxygen"
                android:text="1,944"
                android:textColor="@color/colorDarkPink"
                android:textSize="15sp"
                android:layout_marginRight="50dp"
                android:padding="10dp"
                android:gravity="start"/>

            <TextView
                android:id="@+id/textMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:text="+919876543211"
                android:textColor="@color/colorDarkPink"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Navigate_btn_admin"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>